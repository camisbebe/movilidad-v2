<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracion_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context="com.gruposalinas.elektra.movilidadgs.Activities.ConfiguracionApp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/hader"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="#FFD700">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/regresar2"
                android:layout_width="70dp"
                android:layout_height="80dp">
                <ImageButton
                    android:id="@+id/boton_regresar"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/flecha_cabeza"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView

                android:id="@+id/titulo_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ConfiguraciÃ³n de SOCIO MAS"
                android:textColor="#373333"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp" />
        </LinearLayout>


        <ListView
            android:layout_below="@+id/hader"
            android:layout_above="@+id/footer"
            android:id="@+id/listaConfig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#3F3E3E"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_height="50dp">


            <ImageView
                android:id="@+id/paginaweb"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="@drawable/cuentanos"
                android:layout_marginLeft="140dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/panico"
                android:layout_width="40dp"
                android:layout_marginLeft="120dp"
                android:layout_height="60dp">

                <ImageView
                    android:background="@drawable/panico_icono"
                    android:layout_width="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="25dp" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
