<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context="com.gruposalinas.elektra.movilidadgs.Activities.Settings_perfil">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="#FFD700">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/regresar2"
                android:layout_width="70dp"
                android:layout_height="80dp">
                <ImageButton
                    android:id="@+id/boton_regresar"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/flecha_cabeza"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView

                android:id="@+id/titulo_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuraci칩n de perfil"
                android:textColor="#373333"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/main_photo_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/perfil_ekt"/>

        </LinearLayout>
        <TextView
            android:id="@+id/editar_foto"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="editar foto"
            android:textColor="#373333"
            android:textSize="15dp"
            android:layout_marginRight="90dp"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                    <TextView
                        android:id="@+id/usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adrian Guzman Martinez"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="30dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linea"
                    android:layout_gravity="right"
                    android:background="#030303"
                    android:layout_width="280dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp">
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alias:"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                    <EditText
                        android:hint="Alias"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textAutoComplete"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:background="#FFFFFF"
                        android:paddingLeft="40dp" />



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:background="#030303"
                    android:layout_width="300dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp">
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero Celular:"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <TextView
                        android:visibility="gone"
                        android:textColor="#373333"
                        android:text="Pais"
                        android:id="@+id/lada1"
                        android:layout_width="60dp"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/flecha"
                        android:background="@drawable/flecha_proponer"
                        android:layout_width="20dp"
                        android:layout_height="15dp" />

                    <EditText
                        android:hint="55"
                        android:id="@+id/tel2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:enabled="false"
                        android:singleLine="true"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:background="#030303"
                    android:layout_width="230dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp">
                </LinearLayout>






                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compa침ia:"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                    <TextView
                        android:id="@+id/compa침ia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="compa침ia"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="30dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:id="@+id/progressbar"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/main_progressbar_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/loading_animation"/>

                </RelativeLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:background="#030303"
                    android:layout_width="270dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp">
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero del jefe:"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <TextView
                        android:id="@+id/numero_jefe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin registro"
                        android:textColor="#373333"
                        android:textSize="15dp"
                        android:layout_marginLeft="30dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:background="#030303"
                    android:layout_width="230dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp">
                </LinearLayout>



            </LinearLayout>




        </ScrollView>
        <Button
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/guardar"
            android:text="Guardar"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:background="#EFC822"
            android:layout_below="@+id/mapasenvir"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
